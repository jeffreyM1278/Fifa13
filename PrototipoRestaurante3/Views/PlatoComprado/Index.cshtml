@model IEnumerable<PrototipoRestaurante3.Models.PlatoComprado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plato.PlatoID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompraID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompraID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompraID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{

    <div class="container">

        <!-- Promociones -->
        <h2>🎉 Promociones</h2>
        <div class="grid">
            @foreach (var promocion in Model.Promociones)
            {
                <div class="card">
                    <div class="card-content">
                        <h3>@promocion.Descripcion</h3>
                        <p><strong>Descuento:</strong> @(promocion.Descuento * 100)% OFF</p>
                        <p><small>Válido desde: @promocion.FechaInicio.ToShortDateString() hasta @promocion.FechaFin.ToShortDateString()</small></p>
                    </div>
                </div>
            }
        </div>

        <!-- Menú Completo -->
        <h2>🍽️ Menú Completo</h2>
        <div class="grid">
            @foreach (var plato in Model.Platos)
            {
                <div class="card">
                    <img src="@Url.Content("~/" + plato.RutaImagen)" alt="@plato.Nombre" />
                    <div class="card-content">
                        <h3>@plato.Nombre</h3>
                        <p>Precio: $@plato.Precio</p>
                        @if (plato.Promocion != null)
                        {
                            <p class="text-success">Descuento: @(plato.Promocion.Descuento * 100)% OFF</p>
                        }
                        <a href="@Url.Action("AgregarAlCarrito", "Carrito", new { platoId = plato.PlatoID })" class="btn">Agregar al Carrito</a>
                    </div>
                </div>
            }
        </div>

        <!-- Combos -->
        <h2>🥡 Combos</h2>
        <div class="grid">
            @foreach (var combo in Model.Combos)
            {
                <div class="card">
                    <img src="@Url.Content("~/" + combo.RutaImagen)" alt="@combo.Nombre" />
                    <div class="card-content">
                        <h3>@combo.Nombre</h3>
                        <p>Precio: $@combo.Precio</p>
                        @if (combo.Promocion != null)
                        {
                            <p class="text-success">Descuento: @(combo.Promocion.Descuento * 100)% OFF</p>
                        }
                        <a href="@Url.Action("AgregarAlCarrito", "Carrito", new { comboId = combo.ComboID })" class="btn">Agregar al Carrito</a>
                    </div>
                </div>
            }
        </div>

    </div>

}

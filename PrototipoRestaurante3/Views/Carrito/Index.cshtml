@{


    <h2>Tu Carrito de Compras</h2>

    @if (Model.Detalles.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Total</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detalle in Model.Detalles)
                {
                    <tr>
                        <td>@detalle.Plato.Nombre</td>
                        <td>@detalle.Cantidad</td>
                        <td>@detalle.Plato.Precio</td>
                        <td>@detalle.Subtotal</td>
                        <td>
                            <a href="@Url.Action("PersonalizarCompra", "Carrito", new { carritoId = Model.CarritoID })">Personalizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("FinalizarCompra", "Carrito", new { carritoId = Model.CarritoID })">Finalizar Compra</a>
    }
    else
    {
        <p>No hay productos en tu carrito.</p>
    }

}
